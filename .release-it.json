{
  "hooks": {
    "before:init": ["echo 'Starting release process...'"]
  },
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
